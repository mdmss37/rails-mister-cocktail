
<h2><%= @cocktail.name %></h2>
<h3>Ingredients</h3>

<%= link_to "Add new doses", new_cocktail_dose_path(@cocktail) %>

<%= image_tag @thumbnail %>
<%= @instructions %>

<ul>
<% @doses.each do |dose| %>
  <li><%= dose.ingredient.name %><%= dose.description %></li>
  <%= link_to "Delete", dose_path(dose), method: :delete  %>
<% end %>  
</ul>
